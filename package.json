{
	"name": "scblocks",
	"title": "ScBlocks",
	"version": "0.1.0",
	"private": true,
	"description": "Custom blocks for the new WordPress editor.",
	"author": "sc81",
	"license": "GPL-2.0",
	"keywords": [
		"WordPress",
		"ScBlocks",
		"blocks"
	],
	"homepage": "https://github.com/sc81/scblocks#readme",
	"repository": "git+https://github.com/sc81/scblocks.git",
	"bugs": {
		"url": "https://github.com/sc81/scblocks/issues"
	},
	"dependencies": {
		"@wordpress/icons": "^2.4.0",
		"classnames": "2.2.6",
		"immer": "^3.3.0"
	},
	"devDependencies": {
		"@testing-library/react": "^10.4.7",
		"@wordpress/components": "^10.0.3",
		"@wordpress/scripts": "^12.1.1",
		"po2json": "^0.4.5"
	},
	"scripts": {
		"setup": "composer install && npm install && npm run build",
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"clean": "rm -rf build node_modules vendor composer.lock package-lock.json",
		"makepot": "composer wp -- i18n make-pot . ./languages/scblocks.pot --skip-audit --exclude=build,node_modules,vendor --headers='{\"Last-Translator\":\"sc81\",\"Report-Msgid-Bugs-To\":\"https://github.com/sc81/scblocks/issues\"}' --file-comment=\"Copyright (c) 2020 sc81, LLC. All Rights Reserved.\"",
		"po2json": "po2json ./languages/scblocks.pot ./languages/scblocks.json --format=jed1.x --pretty --domain=scblocks",
		"format-js": "wp-scripts format-js",
		"lint-css": "wp-scripts lint-style",
		"lint-css:fix": "npm run lint-css -- --fix",
		"lint-js": "wp-scripts lint-js",
		"lint-js:fix": "npm run lint-js -- --fix",
		"lint-php": "composer phpcs",
		"lint-php:fix": "composer phpcbf",
		"lint-md-docs": "wp-scripts lint-md-docs",
		"lint-md-js": "wp-scripts lint-md-js",
		"test:unit": "wp-scripts test-unit-js",
		"test:unit:help": "wp-scripts test-unit-js --help",
		"test:unit:watch": "wp-scripts test-unit-js --watch",
		"test:unit:debug": "wp-scripts --inspect-brk test-unit-js --runInBand --no-cache",
		"packages-update": "wp-scripts packages-update"
	}
}
